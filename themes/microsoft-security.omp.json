{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#0078D4",
          "foreground": "#FFFFFF",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " {{- $t := env \"OMP_TENANT_ID\" | trim -}}{{- $s := env \"OMP_AZ_NAME\" | trim -}}{{- $u := env \"OMP_CLOUD_USER\" | trim -}}{{- $parts := list -}}{{- if $t }}{{- $parts = append $parts (printf \"\\uf1ad %s\" $t) -}}{{- end -}}{{- if $s }}{{- $parts = append $parts (printf \"\\uf1c0 %s\" $s) -}}{{- end -}}{{- if $u }}{{- $parts = append $parts (printf \"\\uf007 %s\" $u) -}}{{- end -}}{{- if gt (len $parts) 0 }} {{ join \"  \" $parts }} {{ end -}}",
          "type": "text"
        },
        {
          "background": "#2B2B2B",
          "foreground": "#FFFFFF",
          "powerline_symbol": "\ue0b0",
          "properties": { "style": "folder" },
          "style": "powerline",
          "template": " \uf07b  {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#00BCF2",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFB900{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#E81123{{ end }}",
            "{{ if gt .Ahead 0 }}#0078D4{{ end }}",
            "{{ if gt .Behind 0 }}#0078D4{{ end }}"
          ],
          "foreground": "#2B2B2B",
          "powerline_symbol": "\ue0b0",
          "properties": { "fetch_status": true, "fetch_upstream_icon": true },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#0078D4",
          "background_templates": [
            "{{ if gt .Code 0 }}#E81123{{ end }}"
          ],
          "foreground": "#FFFFFF",
          "leading_diamond": "<transparent,background>\ue0b0</>",
          "properties": { "always_enabled": true },
          "style": "diamond",
          "template": " \ue23a {{ if gt .Code 0 }}\uf00d {{ reason .Code }}{{ else }}\uf42e{{ end }} ",
          "trailing_diamond": "\ue0b4",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#004578",
          "foreground": "#FFFFFF",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "style": "powerline",
          "template": " \uf132 {{ $r := env \"OMP_ROLE\" | trim -}}{{ if $r }}{{ $r }}{{ else }}User{{ end }} ",
          "type": "text"
        },
        {
          "background": "#00BCF2",
          "background_templates": [
            "{{ if contains (env \"OMP_TOKEN_REMAINING\") \"Expired\" }}#E81123{{ end }}",
            "{{ if and (not (contains (env \"OMP_TOKEN_REMAINING\") \"Expired\")) (contains (env \"OMP_TOKEN_REMAINING\") \"h\") }}#107C10{{ end }}",
            "{{ if and (not (contains (env \"OMP_TOKEN_REMAINING\") \"Expired\")) (not (contains (env \"OMP_TOKEN_REMAINING\") \"h\")) (contains (env \"OMP_TOKEN_REMAINING\") \"m\") }}#FFB900{{ end }}",
            "{{ if or (eq (env \"OMP_TOKEN_REMAINING\") \"No Token\") (eq (env \"OMP_TOKEN_REMAINING\") \"No Session\") }}#2B2B2B{{ end }}"
          ],
          "foreground": "#2B2B2B",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "style": "powerline",
          "template": " {{- $t := env \"OMP_TOKEN_REMAINING\" | trim -}}{{- if and $t (ne $t \"No Token\") (ne $t \"No Session\") -}}\uf023 {{ $t }}{{- else -}}\uf023 No Token{{- end -}} ",
          "type": "text"
        },
        {
          "background": "#0078D4",
          "background_templates": [
            "{{ if .Root }}#E81123{{ end }}"
          ],
          "foreground": "#FFFFFF",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "style": "powerline",
          "template": " {{ if .Root }}\uf0e7 Admin{{ else }}\uf007 User{{ end }} ",
          "type": "root"
        },
        {
          "background": "#2B2B2B",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#00BCF2{{end}}",
            "{{if eq \"Discharging\" .State.String}}#FFB900{{end}}",
            "{{if eq \"Full\" .State.String}}#107C10{{end}}"
          ],
          "foreground": "#FFFFFF",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "properties": {
            "charged_icon": "\ue22f ",
            "charging_icon": "\ueb2d ",
            "discharging_icon": "\uf244 "
          },
          "style": "powerline",
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}\uf295 ",
          "type": "battery"
        },
        {
          "background": "#004578",
          "foreground": "#FFFFFF",
          "invert_powerline": true,
          "leading_diamond": "\ue0b2",
          "style": "diamond",
          "template": " \ue641 {{ .CurrentDate | date .Format }} ",
          "trailing_diamond": "\ue0b4",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#0078D4",
          "foreground": "#FFFFFF",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": " \uf308 Kubernetes {{.Context}} cluster {{if .Namespace}}- {{.Namespace}} namespace{{end}} ",
          "trailing_diamond": "\ue0b0",
          "type": "kubectl"
        },
        {
          "background": "#00BCF2",
          "foreground": "#2B2B2B",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \uebd8 Subscription {{ .Name }} ({{ if .EnvironmentName | contains \"AzureCloud\" }}{{ \"Global\" }}{{ else }}{{ .EnvironmentName }}{{ end }}) ",
          "type": "az"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#0078D4",
          "style": "plain",
          "template": " > ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "version": 3
}
